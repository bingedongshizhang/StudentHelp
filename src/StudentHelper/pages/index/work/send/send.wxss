.container{
  padding: 0 30rpx;
}
.list{
  height: 100rpx;
  /* padding-top: 20rpx; */
  line-height: 100rpx;
  color: #8d8d8d;
  position: relative;
  border-bottom: 1rpx solid #f8f8f8;
}
.list image{
  position: relative;
  width: 60rpx;
  height: 60rpx;
  top: 16rpx;
}
.list text{
  font-size: 40rpx;
  padding-left: 15rpx;
}
.list input,picker{
  display: inline-block;
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  top: 0;
  left: 240rpx;
}
picker{
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  top: 0;
  display: block;
   width: 400rpx; 
  /* margin-left: 240rpx; */
}
.picker{
  width: 100%;
}
textarea{
  background: #f7f8fa;
  line-height: 52rpx;
  padding: 0;
  font-size: 36rpx;
  display: block;
  width: 100%;
}
button{
  background: #0495fe;
  width: 360rpx;
  line-height: 90rpx;
  height: 90rpx;
  color: #ffffff;
  font-size: 40rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
  border-radius: 3rpx;
}
