page{
  height: 100%;
}
.container{
  background: #e8e8e8;
  height: 100%;
}
.job_list{
    height: 225rpx;
    padding: 28rpx;
    position: relative;
    background: #ffffff;
}
.job_list .job_name{
    color: #ee724e;
}
.job_list  .shop_name{
    line-height: 64rpx;
    color: #646464;
}
.job_list  .sort_detail{
    height: 64rpx;
    width: 100%;
    color: #86858a;
}
.job_list  .sort_detail view{
    float: left;
    margin-right: 8rpx;
}
.job_list  .sort_detail image{
    height: 32rpx;
    width: 36rpx;
    position: relative;
    top: 7rpx;
}
.job_list .time{
    color: #c8c7cc;
}
.salary{
    color: #0495fe;
    position: absolute;
    top: 96rpx;
    right: 20rpx;
}
.bg{
  height: 21rpx;
  background: #e8e8e8;
}
.bottom{
    height: 120rpx;
    position: fixed;
    display: flex;
    bottom: 0;
    width: 100%;
}
.bottom .phone{
    flex: 1;
    text-align: center;
    background: #f8f8f8;
}
.bottom .introduce{
    flex: 1;
    text-align: center;
    background: #0495fe;
}
.bottom image{
    width: 80rpx;
    height: 45rpx;
    padding-top: 16rpx;
}
.introduce view{
    color: #fefefe;
    margin-top: -8rpx;
}
.phone view{
    color: #0495fe;
    margin-top: -8rpx;
}
.job_introduce{
  background: #ffffff;
  padding: 32rpx;
}
.job_introduce .introduce_title{
  font-size: 40rpx;
  font-weight: bold;
}
.detail,.Worktime,.other{
  padding-top: 16rpx;
  padding-left: 10rpx;
}
.detail_title,.Worktime_title,.other_title{
  font-size: 36rpx;
  font-weight: bold;
}